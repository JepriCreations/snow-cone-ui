---
import { cn } from '@/lib/utils'

export interface Props {
  className?: string
}
const { className } = Astro.props
---

<section
  class:list={[
    cn(
      'preview mb-3 grid place-items-center overflow-hidden rounded-lg border border-outlineVariant bg-surfaceContainer/80',
      className
    ),
  ]}
>
  <div class="flex min-h-[120px] w-full items-center justify-center p-6">
    <slot name="preview" />
  </div>
  <slot />
</section>
