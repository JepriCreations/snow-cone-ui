---
import { ClipboardButton } from './react/clipboard-button'

const props = Astro.props
---

<div class="copyable-container relative w-full overflow-hidden">
  <div class="max-h-96 w-full overflow-auto">
    <pre {...props}><slot /></pre>
  </div>
  <div class="absolute right-3 top-3 flex">
    <ClipboardButton client:visible />
  </div>
</div>
